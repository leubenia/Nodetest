<body>
    <%- include('header') %>
    <div id = "body">
        <p><h1>제목</h1></p>
        <p>작성자</p>
        <div class="jumbotron">
        <h1>글내용입니다.</h1>
        <p>날자</p>
        <p><a class="btn btn-primary btn-lg" href="/delwrite?writeId=1" role="button">수정,삭제</a></p>
        </div>
    </div>
    <div class="wrap">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <input type="text" id="name" placeholder="비로그인 작성불가" value="<% if(mysess){ %><%= id %><% } %>" readonly>
                        </th>
                        <th>
                            <input type="text" id="rebody" placeholder="댓글">
                        </th>
                        <th>
                            <button onclick="up_rewrite()"> 작성..!</button>
                        </th>
                    </tr>
                </thead>
                <tbody id = "write">
                    <tr val = 1>
