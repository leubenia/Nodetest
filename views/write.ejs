    <title>르베니아 게시판 | 게시판</title>
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const writeId = urlParams.get("writeId");
        $(document).ready(function () {
            get_write()
            console.log(writeId)
        })

        function sign_out() {
            $.removeCookie('mytoken', { path: '/' });
            $.removeCookie('userName', { path: '/' });
            window.location.href = "/"
        }

        //글내용가져오기
        function get_write() {
            $("#body").empty()
            $("#write").empty();
            console.log(writeId)
            $.ajax({
                type: "GET",
                url: `/api/write/${writeId}`,
                data: {},
                success: function (response) {
                    let write = response["detail"]
                    if(write == null){
                        alert("게시글존재하지않음")
                    }
                    else{
                        console.log(write)
                        make_card(write)
                        
                        for(rewr of write["rewrite"]){
                            make_re(rewr)
                        }
                        
                    }
                }
            })
        }
        function make_card(item) {
            let htmlTemp = `
            <p><h1>${item['title']}</h1></p>
            <p>${item['name']}</p>
            <div class="jumbotron">
            <h1>${item['body']}</h1>
            <p>${item['date']}</p>
            <p><a class="btn btn-primary btn-lg" href="/delwrite?writeId=${item['writeId']}" role="button">수정하기</a></p>
            </div>
            `
            $("#body").append(htmlTemp)
        }
        function make_re(item){
            let htmlTemp =`<tr val = 1>
                <th>
                    ${item["username"]}
                </th>
                <th>
                    ${item["rebody"]}
                </th>
                <th>
                    <button> 수정</button><button> 삭제</button>
                </th>
            </tr>`
            $("#write").append(htmlTemp);

        }
        //댓글작성
        function up_rewrite() {
            let name = $("#name").val()
            let rebody = $("#rebody").val()
            if(name == ""|| rebody == ""){
                alert("빈칸이 없게 해주세요")
            }
            $.ajax({
                type: "POST",
                url: `/api/rewrite/${writeId}`,
                data: {rebody:rebody,username: name},
                success: function (response) {
                    alert(response["result"])
                    window.location.reload();
                },
                error: function (error) {
                    alert(error.responseJSON.errorMessage);
                },
            })
        }
        function number2decimals(num) {
            return (Math.round(num * 100) / 100).toFixed(2);
        }
    </script>
    <style>
        .card {
            cursor: pointer;
        }

