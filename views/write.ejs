    <title>르베니아 게시판 | 게시판</title>
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const writeId = urlParams.get("writeId");
        $(document).ready(function () {
            get_write()
            console.log(writeId)
        })

        function sign_out() {
            $.removeCookie('mytoken', { path: '/' });
            $.removeCookie('userName', { path: '/' });
            window.location.href = "/"
        }

        //테스트
        function get_write() {
            $("#body").empty()
            console.log(writeId)
            $.ajax({
                type: "GET",
                url: `/api/write${writeId ? "?writeId=" + writeId : ""}`,
                data: {},
                success: function (response) {
                    let write = response["write"]
                    console.log(write)
                    for (let i = 0; i < write.length; i++) {
                        make_card(write[i])

                    }
                }
            })
        }
        function make_card(item) {
            let htmlTemp = `
            <p><h1>${item['title']}</h1></p>
            <p>${item['name']}</p>
            <div class="jumbotron">
            <h1>${item['body']}</h1>
            <p>${item['date']}</p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">수정하기</a></p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">삭제</a></p>
            `
            $("#body").append(htmlTemp)
        }




        function get_detail() {
            $.ajax({
                type: "GET",
                url: `/api/write/${writeId}`,
                data: {},
                error: function (xhr, status, error) {
                    if (status == 404) {
                        alert("존재하지 않는 게시글입니다.");
                    }
                    window.location.href = "/";
                },
                success: function (response) {
                    let writeDetail = response["detail"];
                    $("#goodsUrl").attr("src", writeDetail["thumbnailUrl"]);
                    $("#goodsName").text(writeDetail["name"]);
                    $("#goodsPrice").text("$" + number2decimals(goodsDetail["price"]));

                    sessionStorage.setItem("writeId", writeId);
                    sessionStorage.setItem("goodsName", goodsDetail["name"]);
                    sessionStorage.setItem("goodsPrice", goodsDetail["price"]);
                    
                }
            });
        }

        function number2decimals(num) {
            return (Math.round(num * 100) / 100).toFixed(2);
        }
    </script>
