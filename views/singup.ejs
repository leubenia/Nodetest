    <title>르베니아 게시판 | 게시판</title>
    <script>
        function up_sing() {
            let id = $("#id").val()
            let name = $("#name").val()
            let pw = $("#pw").val()
            let pw2 = $("#pw2").val()
            console.log(id,name,pw2,pw)
            if(id == null||id == ""){
                $("#id").focus();
                alert("아이디를 입력해주세요");
            }
            else if(name == null||name == ""){
                $("#name").focus();
                alert("닉네임을 입력해주세요");
            }
            else if(pw == null||pw == ""){
                $("#pw").focus();
                alert("비밀번호를 입력해주세요");
            }
            else if(pw2 == null||pw2 == ""){
                $("#pw2").focus();
                alert("비밀번호를 입력해주세요");
            }
            else{
                $.ajax({
                    type: "POST",
                    url: `/userdo/signup`,
                    data: {id : id, name : name, pw : pw, conpw : pw2},
                    success: function (response) {
                        console.log(response["result"])
                        alert("작성 완료")
                        window.location.href = '/'
                    }
                })
            }
        }
    </script>
